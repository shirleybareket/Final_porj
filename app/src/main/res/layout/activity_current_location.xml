<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerHorizontal="true"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context="com.example.shirley.myapplication5.CurrentLocation">


        <fragment
            android:id="@+id/mapFragment2"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="374dp"
            android:layout_height="423dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="16dp" />

     <Button
        android:id="@+id/btnGotoSearchAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="gotoSearchAddresss"
        android:text="@string/button_goto_SearchAddress"
        android:layout_marginBottom="16dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />


</RelativeLayout>



